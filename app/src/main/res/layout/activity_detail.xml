<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">


    <ImageView
        android:layout_marginTop="15dp"
        android:id="@+id/gambar_detil"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        android:background="#fff" />
    <TextView
        android:id="@+id/tvjuduldetil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gambar_detil"
        android:text="Judul Film"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/tv_rilis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvjuduldetil"
        android:text="Tanggal Rilis :"
        android:textColor="#000"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/tv_rilis_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_rilis"
        android:hint="mm-dd-yyyy"
        android:textColor="#000"
        android:layout_margin="10dp"
        android:textAlignment="center" />
    <TextView
        android:id="@+id/tv_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_rilis_detail"
        android:text="Rating :"
        android:textColor="#000"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/tv_rating_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_rating"
        android:hint="Rating Film"
        android:textColor="#000"
        android:layout_margin="10dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/sinopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_rating_detail"
        android:text="Synopsis :"
        android:textColor="#000"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sinopsis_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sinopsis"
        android:textAlignment="center"
        android:hint="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean blandit varius dui, non ultricies ante luctus finibus. Cras facilisis libero a tellus sollicitudin efficitur. Nulla dictum pellentesque elit. Nullam nec imperdiet libero. Donec fermentum sed nulla a bibendum. Morbi finibus volutpat lectus, quis condimentum diam efficitur et. Cras vel iaculis enim. Cras a vestibulum diam. Fusce ac est placerat, volutpat nunc eu, congue urna."
        android:layout_margin="10dp"
        android:textStyle="normal" />
</RelativeLayout>
    </ScrollView>
</LinearLayout>